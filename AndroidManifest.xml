<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.flightsofangels"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreatePollActivity"
            android:label="@string/title_activity_display_message" >
        </activity>
        <activity
            android:name=".JoinPollActivity"
            android:label="@string/title_activity_join_poll" >
        </activity>
        <activity
            android:name=".ResultsOfCreatePoll"
            android:label="@string/title_activity_results_of_create_poll" >
        </activity>
        <activity
            android:name=".OngoingPolls"
            android:label="@string/title_activity_ongoing_polls" >
        </activity>
        <activity
            android:name=".MyWiFiActivity"
            android:label="@string/title_activity_my_wi_fi" >
        </activity>
        <activity
            android:name=".DeviceListFragment"
            android:label="@string/title_activity_device_list_fragment" >
        </activity>
    </application>

</manifest>